<main>
<section class="posts">
  <img class="image" src="<%=@user.photo%>" alt="user_image" />
  <div class="details">
    <h2><%= @user.name%> </h2>
    <p>Number of posts: <%= @user.posts_counter%> </p>
  </div> 
</section>

<section class="usercontainer">
  <% @user.posts.each do |post| %>
    <%= render partial: 'post', locals: {post: post} %>
  <% end %>
</section>
</main>