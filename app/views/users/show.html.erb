<main>
<section class="users">
<div class="userdetails">
<%= image_tag("avatar.jpg", class:"image", alt:"user_image") %>
  <div class="details">
    <h2><%= @user.name%> </h2>
    <p class="post">Number of posts: <%= @user.posts_counter%> </p>
  </div> 
</div
</section>
<section class="bio">
  <h3>Bio</h3>
  <p><%= @user.bio%> </p>
</section>
<section class="userpost">
  <% @user.recent_posts.each do |post| %>
    <%= link_to user_post_path(@user, id: post.id) do %>
  <div class="posts">
  <h5> Post <span><%= post.id %></span></h5>
    <h4><%= post.title %></h4>
    <p><%= post.text %> </p>
    <span class="comment_like">
      Comment: <%= post.comments_counter%>, Likes: <%= post.likes_counter || 0 %>
    </span>
  </div>
  <% end %>
  <% end %>
</section>
<button class="btn">
    <%= link_to "See all posts", user_posts_path(@user) %>
</button>
</main>