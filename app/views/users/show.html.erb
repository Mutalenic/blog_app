<main>
<section class="users">
<div class="userdetails">
  <img class="image" src="<%=@user.photo%>" alt="user_image" />
  <div class="details">
    <h2><%= @user.name%> </h2>
    <p class="post">Number of posts: <%= @user.posts_counter%> </p>
  </div> 
</div
</section>
<section class="bio">
  <h3>Bio</h3>
  <p><%= @user.bio%> </p>
</section>
<section class="userpost">
  <% @user.recent_posts.each do |post| %>
    <%= link_to user_post_path(@user, id: post.id) do %>
  <div class="posts">
    <h4><%= post.title %></h4>
    <p><%= post.text %> </p>
    <span>
      Comment: <%= post.comments_counter%>, Likes: <%= post.likes_counter || 0 %>
    </span>
  </div>
  <% end %>
  <% end %>
</section>
<button class="showposts">
    <%= link_to "See all posts", user_posts_path(@user) %>
</button>
</main>